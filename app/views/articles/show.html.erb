<h1> <%= @article.title %> </h1>
<% unless @article.user.nil? %>
<p>Escrito por: <%= @article.user.email %></p>
<div> Tags:
	<% @article.categories.each do |category| %>
		<%= link_to category.name, category, style:'color: #{category.color};' %>
	<%end%>
</div>
<p>Visitas: <%= @article.visits_count %></p>
<%end%>
<%= image_tag @article.cover.url()  %>
<p><%= @article.body %></p>
<div class="container">
	<h2>Comentarios</h2>
	<ul class="list-unstyled">
		<% @article.comments.each do |comment| %>
			<li>
				<label>Usuario: <%= comment.user.email %></label>
				<p>Comentario: <%= comment.body %> </p>
			</li>
		<%end%>	
	</ul>
	<h3>Nuevo Comentario</h3>
	<%= render 'comments/form' %>
</div>
<p><%= link_to 'Editar', edit_article_path(@article) %></p>