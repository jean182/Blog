<div class="row">
<div class="col-md-4 offset-md-4">
<h2 class="login-title">Registro</h2>
<div class="account-wall">
<%= image_tag 'avatar.png', class: 'profile-img' %>
<%= form_for(resource, as: resource_name, :html => {:class => 'form-signin'}, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <%= f.email_field :email, autofocus: true, placeholder: 'Correo Electrónico', class: 'form-control' %>

    
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimos)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Contraseña', class: 'form-control
    ' %>

    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirmar Contraseña', class: 'form-control' %>

    <%= f.submit "Registrarse", class: 'btn btn-lg btn-primary btn-block' %>

<% end %>

</div>

<%= render "devise/shared/links" %>
</div>
</div>
