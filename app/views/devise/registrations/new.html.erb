<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, 'Ingrese su correo electrónico' %><br />
    <%= f.email_field :email, autofocus: true, placeholder: 'Correo Electrónico', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password, 'Ingrese su contraseña' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Contraseña', class: 'form-control
    ' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'Ingrese de nuevo su contraseña' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirmar Contraseña', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Registrarse", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
