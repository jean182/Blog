<h2 class="text-xs-center">Iniciar Sesión</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, 'Ingrese su correo electrónico' %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Correo Electronico' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'Ingrese su contraseña' %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Contraseña' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-check">
          <%= f.check_box :remember_me  %>
          <%= f.label :remember_me, 'Recordarme' %>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "Iniciar Sesión", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
