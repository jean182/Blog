<div class="container">
<div class="row">
 <div class="col-md-4 offset-md-4">
<h2 class="text-xs-center login-title">Iniciar Sesión</h2>
<div class="account-wall">
<%= image_tag 'avatar.png', class: 'profile-img' %>

    <%= form_for(resource, as: resource_name, :html => {:class => 'form-signin'}, url: session_path(resource_name)) do |f| %>
      
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Correo Electronico' %>
      
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Contraseña' %>

        <%= f.submit "Iniciar Sesión", class: 'btn btn-lg btn-primary btn-block' %>

      <% if devise_mapping.rememberable? -%>
       
          <%= f.check_box :remember_me  %>
          <%= f.label :remember_me, 'Recordarme', class: 'checkbox pull-left' %>
      
      <% end -%>
        

    <% end %>
    
    </div>
         <%= render "devise/shared/links" %>
    
    
    </div>
    </div>

    </div>
    
